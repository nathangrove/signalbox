{
  "name": "webmail-server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "node dist/main.js",
    "start:dev": "ts-node-dev -r dotenv/config --respawn --transpile-only src/main.ts",
    "build": "tsc -p tsconfig.build.json",
    "worker": "ts-node-dev -r dotenv/config --respawn --transpile-only src/workers/worker-entry.ts",
    "prisma:generate": "NODE_OPTIONS='-r dotenv/config' prisma generate --config ../prisma.config.ts",
    "prisma:migrate": "NODE_OPTIONS='-r dotenv/config' prisma migrate dev --config ../prisma.config.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-socket.io": "^10.0.0",
    "@nestjs/websockets": "^10.0.0",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "bcryptjs": "^3.0.3",
    "bullmq": "^5.67.1",
    "dotenv": "^16.0.0",
    "imapflow": "^1.2.7",
    "ioredis": "^5.9.2",
    "mailparser": "^3.9.1",
    "chrono-node": "^2.3.1",
    "nodemailer": "^6.9.4",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@types/mailparser": "^3.4.6",
    "@types/nodemailer": "^6.4.4",
    "ts-node-dev": "^2.0.0"
  }
}
